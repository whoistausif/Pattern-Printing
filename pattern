# Function to generate a pyramid pattern
def number_pattern(n):
    
    for i in range(1, n + 1):
        
                                               # Print leading spaces
        for j in range(n - i):
            print(" ", end="")
                                                # Print numbers
        for k in range(1, i + 1):
            print(i, end="")
                                                  # Move to the next line
        print()

                                                   # Number of rows for the pyramid
rows = 7
number_pattern(rows)
